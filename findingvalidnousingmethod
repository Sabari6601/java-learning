
package method2a;

import java.util.*;
public class Method2a {
static String phone(String c)
{
int l=c.length();
if(l == 10)
{
    System.out.print("it is an valid number: ");
}
else
    System.out.println("error: ");
           
return c;
}
    public static void main(String[] args) {
  Scanner sc=new Scanner (System.in);
