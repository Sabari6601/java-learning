
package whileloop2;
import java.util.*;
public class Whileloop2{

  
    public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    System.out.println("enter a number to count hr digits");
    int n=sc.nextInt();
    
    int c=0;
    while(n>0)
    {
        n=n/10;
        c++;
    }
    System.out.println(c);
    }
    
}
